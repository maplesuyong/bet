<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>메인로비</title>
</head>
<body>
    <ul class="nav nav-pills nav-fill fixed-top navbar-light bg-light">
        <li class="nav-item py-2 px-1">
            <a class="nav-link active p-3" aria-current="page" href="/">메인</a>
        </li>
        <li class="nav-item py-2 px-1">
            <a class="nav-link active p-3" href="betting">베팅</a>    
        </li>
        <li class="nav-item py-2 px-1">
            <a class="nav-link active p-3" href="profile">내정보</a>
        </li>   
        <li class="nav-item py-2 px-1">
            <a class="nav-link active p-3" href="logout">로그아웃</a>
        </li>
    </ul>
    <div class="container-fluid text-center">
        <h1 class="my-2">경기정보</h1>
        <% for(var i=0; i < result.length; i++) { %>
        <div class="card m-2 border border-dark shadow">
            <!-- 리그 & 경기날짜 -->
            <div class="m-2 border rounded shadow">
                <div class="row p-2">
                    <div class="col-4 fw-bold">리그</div>
                    <div class="col-8 fw-bold">경기날짜</div>
                </div>
                <div class="row p-2">
                    <div class="col-4 border-right"><%= result[i].league_name %></div>
                    <div class="col-8"><%= result[i].match_date.toLocaleString() %></div>
                </div>
            </div>
            <!-- 팀로고 & 팀이름 -->
            <div class="m-2 py-3 border rounded shadow">
                <div class="row">
                    <div class="col-6 fw-bold text-danger">홈팀</div>
                    <div class="col-6 fw-bold text-primary">원정팀</div>
                </div>
                <div class="row">
                    <div class="col-6 text-center">    
                        <img src="/img/<%= result[i].home %>.svg" style="width: auto; height: 100px;" class="card-img-top p-2">
                        <div class="my-2"><%= result[i].home_name %></div>
                    </div>
                    <div class="col-6 text-center">
                        <img src="/img/<%= result[i].away %>.svg" style="width: auto; height: 100px;" class="card-img-top p-2">
                        <div class="my-2"><%= result[i].away_name %></div>
                    </div>
                </div>
            </div> 
            <!-- 점수 -->
            <% if (result[i].result) { %>
            <div class="m-2 border rounded shadow text-center">
                <h4 class="my-2">경기결과</h4>
                <div class="row my-2 mx-0">
                    <div class="col-6 fw-bold text-danger">홈팀</div>
                    <div class="col-6 fw-bold text-primary">원정팀</div>
                </div>
                <div class="row my-2 mx-0">
                    <div class="col-2"></div>
                    <div class="col-2 fw-bold fs-2"><%= result[i].home_score %></div>
                    <div class="col-1"></div>
                    <div class="col-2 fw-bold fs-2">:</div>
                    <div class="col-1"></div>
                    <div class="col-2 fw-bold fs-2"><%= result[i].away_score %></div>
                    <div class="col-2"></div>
                </div>
            </div> 
            <% } %>
            <!-- 오리지날 배당 -->
            <div class="row m-2 border rounded shadow text-center">
                <h4 class="my-2">오리지날</h4>
                <div class="row my-2 mx-0">
                    <% if (result[i].draw_rate) { %>
                        <% if (result[i].result == "승") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result == "무") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>무</div>
                            <div class="text-warning fw-bold"><%= result[i].draw_rate.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>무</div>
                            <div class="text-warning fw-bold"><%= result[i].draw_rate.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result == "패") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate.toFixed(2) %></div>
                        </div>
                        <% } %>
                    <% } else { %>
                        <% if (result[i].result == "승") { %>
                        <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-6 p-2 fw-bold">
                            <div>승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result == "패") { %>
                        <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-6 p-2 fw-bold">
                            <div>패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate.toFixed(2) %></div>
                        </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <!-- 핸디캡 배당 -->
            <div class="row m-2 border rounded shadow text-center">
                <% if (parseInt(result[i].standard_handy) > 0) { %>
                <h4 class="my-2">핸디캡 +<%= result[i].standard_handy.toFixed(1) %></h4>
                <% } else { %>
                <h4 class="my-2">핸디캡 <%= result[i].standard_handy.toFixed(1) %></h4>
                <% } %> 
                <div class="row my-2 mx-0">
                    <% if (result[i].draw_rate_handy) { %> 
                        <% if (result[i].result_handy == "핸승") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>핸승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>핸승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result_handy == "핸무") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>핸무</div>
                            <div class="text-warning fw-bold"><%= result[i].draw_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>핸무</div>
                            <div class="text-warning fw-bold"><%= result[i].draw_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result_handy == "핸패") { %>
                        <div class="col-4 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>핸패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-4 p-2 fw-bold">
                            <div>핸패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                        </div>  
                        <% } %>
                    <% } else { %>
                        <% if (result[i].result_handy == "핸승") { %>
                        <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>핸승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-6 p-2 fw-bold">
                            <div>핸승</div>
                            <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } %>
                        <% if (result[i].result_handy == "핸패") { %>
                        <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                            <div>핸패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                        </div>
                        <% } else { %>
                        <div class="col-6 p-2 fw-bold">
                            <div>핸패</div>
                            <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                        </div>  
                        <% } %>
                    <% } %>
                </div>
            </div>
            <!-- 언오버 배당 -->
            <div class="row m-2 border rounded shadow text-center">
                <h4 class="my-2">U/O <%= result[i].standard_unover.toFixed(1) %></h4>
                <div class="row my-2 mx-0">
                    <% if (result[i].result_unover == "언더") { %>
                    <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                        <div>언더</div>
                        <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                    </div>
                    <% } else { %>
                    <div class="col-6 p-2 fw-bold">
                        <div>언더</div>
                        <div class="text-danger fw-bold"><%= result[i].home_rate_handy.toFixed(2) %></div>
                    </div>
                    <% } %>
                    <% if (result[i].result_unover == "오버") { %>
                    <div class="col-6 p-2 fw-bold border border-primary rounded-circle shadow">
                        <div>오버</div>
                        <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                    </div>
                    <% } else { %>
                    <div class="col-6 p-2 fw-bold">
                        <div>오버</div>
                        <div class="text-primary fw-bold"><%= result[i].away_rate_handy.toFixed(2) %></div>
                    </div>  
                    <% } %>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</body>
</html>


